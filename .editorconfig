root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[makefile]
indent_size = 4
indent_style = tab

[*.html]
indent_size = 2
indent_style = spaces

[*.js]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = spaces

[*.txt]
indent_size = 4
indent_style = spaces

[*.{yml,yaml}]
indent_size = 2
indent_style = spaces
